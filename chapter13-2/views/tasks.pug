extends layout

block content
    h2 tasks for project #{project.title};
    #list 
        ul#tasks-list       
            each task in tasks
                li  
                    span= task.title    
                    a.delete(href='/task/#{task.id}') x
        form#add(action='/project/#{project.id}/tasks',method="POST")
            input(type='text',name='title')
            button add