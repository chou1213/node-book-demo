extends layout

block content
  h2 all items
  if (items.length)
    ul
      each item in items
        li
          h3: a(href='/item/'+ item.id)= item.title
          = item.description
  else  
    p no items to show
  
  h2 create new item  
  form(action="/create",method="POST")
    p
      label Title
      input(type="text", name="title")
    p
      label description
      textarea(name='description')
    p
      button submit
    